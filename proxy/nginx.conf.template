server {
    listen 443 ssl default_server;

    ssl_certificate /etc/ssl/chrl.pem;
    ssl_certificate_key /etc/ssl/chrl.key;

    location / {
        proxy_pass http://ui:80;
    }

    location /api {
        proxy_pass http://api:80;
    }
}

server {
    listen 80 default_server;

    location / {
        return 301 https://$host$request_uri;
    }
}
